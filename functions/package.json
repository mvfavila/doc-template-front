  "engines": {
    "node": "22"
  },
  "dependencies": {
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^6.3.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.17",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^5.8.2"
  },
  "private": true
}
